{
  "compilerOptions": {
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "types": ["node", "jest", "express"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["es2019", "es2021"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": ["node_modules/@types", "types"],
    "resolveJsonModule": true
  }
}
